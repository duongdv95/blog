<% include ../partials/header %>


<h1>New Blog Post</h1>
<form action="/blog" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="blog[title]" placeholder="title"></input>
    </div>
    <div class="form-group">
        <label>Image</label>
        <input type="text" name="blog[image]" placeholder="image URL"></input>
    </div>
    <div class="form-group">
        <label>Body</label>
        <textarea name="blog[body]"></textarea>
    </div>
    <input type="submit">
</form>


<% include ../partials/footer %>