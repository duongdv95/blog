<% include ../partials/header %>

<div class="container">
    <h1>Edit blog post: </h1>
    <form action="/blog/<%= blogPost._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="blog[title]" value=<%=blogPost.title%>></input>
        </div>
        <div class="form-group">
            <label>Image</label>
            <input type="text" name="blog[image]" value=<%=blogPost.image%>></input>
        </div>
        <div class="form-group">
            <label>Body</label>
            <textarea name="blog[body]"><%=blogPost.body%></textarea>
        </div>
        <input type="submit">
    </form>
</div>

<% include ../partials/footer %>