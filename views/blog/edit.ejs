<% include ../partials/header %>

<div class="container edit">
    <h1>Edit blog post </h1>
    <form action="/blog/<%= blogPost._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="blog[title]" value=<%=blogPost.title%>></input>
        </div>
        <div class="form-group">
            <label>Body</label>
            <textarea name="blog[body]"><%-blogPost.body%></textarea>
        </div>
        <input class="submit" type="submit">
    </form>
</div>

<% include ../partials/footer %>